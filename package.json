{
    "name": "git-branch",
    "displayName": "git-branch",
    "description": "",
    "publisher": "alexdima",
    "version": "1.5.0",
    "activationEvents": [
        "onView:git-branch.view",
        "onCommand:git-branch.refresh"
    ],
    "main": "./out/extension.js",
    "engines": {
        "vscode": "^1.29.0"
    },
    "extensionDependencies": [
        "vscode.git"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "dependencies": {
        "querystring": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.39.0",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1"
    },
    "contributes": {
        "views": {
            "scm": [
                {
                    "id": "git-branch.view",
                    "name": "Git Branch",
                    "when": "config.git.enabled"
                }
            ]
        },
        "commands": {
            "command": "git-branch.refresh",
            "title": "Refresh Git Branch",
            "icon": {
                "dark": "./resources/icons/dark/action-refresh.svg",
                "light": "./resources/icons/light/action-refresh.svg"
            }
        },
        "menus": {
            "view/title": [
                {
                    "command": "git-branch.refresh",
                    "group": "navigation",
                    "when": "view == git-branch.view"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Git Branch",
            "properties": {
                "gitBranch.mergeBase": {
                    "type": "string",
                    "default": "",
                    "description": "Merge Base branch"
                },
                "gitBranch.base": {
                    "type": "string",
                    "default": "master",
                    "description": "Base branch"
                },
                "gitBranch.diffExcludes": {
                    "type": "array",
                    "default": [],
                    "description": "List of excludes",
                    "items": {
                        "type": "string"
                    }
                },
                "gitBranch.diffGroups": {
                    "type": "array",
                    "default": [],
                    "description": "List of excludes",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "files": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alexdima/vscode-git-branch"
    }
}
