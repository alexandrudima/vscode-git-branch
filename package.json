{
    "name": "git-branch",
    "description": "description",
    "publisher": "alexdima",
    "version": "1.2.0",
    "activationEvents": [
        "onView:git-branch.view",
        "onCommand:git-branch.refresh"
    ],
    "main": "main.js",
    "engines": {
        "vscode": "^1.29.0"
    },
    "extensionDependencies": [
        "vscode.git"
    ],
    "contributes": {
        "views": {
            "scm": [
                {
                    "id": "git-branch.view",
                    "name": "Git Branch",
                    "when": "config.git.enabled"
                }
            ]
        },
        "commands": {
            "command": "git-branch.refresh",
            "title": "Refresh Git Branch",
            "icon": {
                "dark": "./resources/icons/dark/action-refresh.svg",
                "light": "./resources/icons/light/action-refresh.svg"
            }
        },
        "menus": {
            "view/title": [
                {
                    "command": "git-branch.refresh",
                    "group": "navigation",
                    "when": "view == git-branch.view"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Git Branch",
            "properties": {
                "gitBranch.base": {
                    "type": "string",
                    "default": "master",
                    "description": "Base branch"
                },
                "gitBranch.diffExcludes": {
                    "type": "array",
                    "default": [],
                    "description": "List of excludes",
                    "items": {
                        "type": "string"
                    }
                },
                "gitBranch.diffGroups": {
                    "type": "array",
                    "default": [],
                    "description": "List of excludes",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "files": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alexandrudima/vscode-git-branch"
    }
}
